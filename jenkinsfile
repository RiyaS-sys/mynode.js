pipeline {
    agent any

    environment {
        NODE_HOME = tool name: 'NodeJS 18', type: 'NodeJS'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    bat 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo "Skipping tests as none are defined"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Add your build commands here
                    echo "Building project..."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Add your deploy commands here
                    echo "Deploying project..."
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed.'
        }
    }
}







