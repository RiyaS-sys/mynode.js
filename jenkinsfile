pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/RiyaS-sys/mynode.js.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                echo 'Build complete'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment placeholder'
            }
        }
    }
}
