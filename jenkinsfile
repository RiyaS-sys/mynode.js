pipeline {
    agent any

    tools {
        nodejs "NodeJS 18"  // You can name your version
    }

    stages {
        stage('Clone Code') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/RiyaS-sys/mynode.js', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'  // Make sure you have test scripts
            }
        }

        stage('Build') {
            steps {
                echo 'Build step - optional for Node.js'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying... (you can set this up to copy files to server)'
            }
        }
    }
}

