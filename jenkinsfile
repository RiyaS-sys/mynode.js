pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18' // must match the name you set earlier
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/RiyaS-sys/mynode.js.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage - optional for now'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy step - define it later'
            }
        }
    }
}
