pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18'  // ✅ Must match the name you configured in Global Tool Config
    }

    stages {
        stage('📥 Clone Repository') {
            steps {
                echo 'Cloning GitHub repository...'
                git url: 'https://github.com/RiyaS-sys/mynode.js.git', branch: 'main'
            }
        }

        stage('📦 Install Dependencies') {
            steps {
                echo 'Installing npm packages...'
                sh 'npm install'
            }
        }

        stage('🧪 Run Tests') {
            steps {
                echo 'Running tests...'
                script {
                    // If no tests are defined, avoid failure
                    try {
                        sh 'npm test'
                    } catch (err) {
                        echo 'No tests defined or tests failed. Skipping...'
                    }
                }
            }
        }

        stage('🏗️ Build (Optional)') {
            steps {
                echo 'Build step placeholder (optional)'
                // Uncomment if you add a build command in package.json
                // sh 'npm run build'
            }
        }

        stage('🚀 Deploy (Manual Placeholder)') {
            steps {
                echo 'Deployment logic goes here (FTP, SSH, Render, Heroku, etc.)'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for details.'
        }
    }
}
