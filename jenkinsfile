pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                // Cloning the repository from GitHub
                git 'https://github.com/RiyaS-sys/mynode.js'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Installing dependencies using npm
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                // Running tests using npm test (if any)
                echo 'Running tests...'
                bat 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Add your deployment commands here
                echo 'Deploying application...'
                // For example, you might use bat './deploy.bat' if you have a deploy script.
                bat 'echo Deployment process will be executed here.'
            }
        }
    }
}









